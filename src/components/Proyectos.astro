---
import CSharp from "./icons/CSharp.astro";


const TAGS = {
  CSharp:{
    name:"C#",
    class: "bg-black text-violet-700",
    icon: CSharp,

  },
}
const PROJECTS = [
  {
    title: "Tutorexpress",
    description:
      "Version de escritorio de un proyecto para seleccion de tutorias individuales para el CECyT 13 ",
    link: "#",
    github: "https://github.com/Supertepo/TutorExpress-escritorio",
    image: "https://via.placeholder.com/300x200",
    tags: [TAGS.CSharp, "SQL"],
  },
];
---

{
  PROJECTS.map(({ title, description, tags, image }) => (
    <article>
      <h3>{title}</h3>
      <p>{description}</p>
      <ul>
        {tags.map((tag) => (
          <li>{tag}</li>
        ))}
      </ul>
      <img src={image} alt={title} />
    </article>
  ))
}
