---
import Badge from "../components/Badge.astro";
import Layout from "../layouts/Layout.astro";
import LinkedIn from "../components/icons/LinkedIn.astro";
import SocialPill from "../components/SocialPill.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import MailIcon from "../components/icons/Mail.astro";
import Experiencia from "../components/Experiencia.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import CodeIcon from "../components/icons/Code.astro";
import Proyectos from "../components/Proyectos.astro";
---

<Layout
  title="Porfolio de Ulises Ruiz(Supertepo) - Programador "
  description="Desarrolador web y .Net"
>
  <main class="px-4">
    <SectionContainer class="py-44 pb-32">
      <img
        class="rounded-full size-12 mb-4"
        src="https://avatars.githubusercontent.com/u/106052507?s=96&v=4"
        alt="Supertepo foto"
      />
      <h1
        class="text-gray-900 dark:text-white text-3xl md:text-4xl
		lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hey, soy Ulises <a
          href="https://www.linkedin.com/in/ulises-antonio-ruiz-silva/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
          ><Badge>Disponible para trabajar</Badge></a
        >
      </h1>
      <h2
        class="text-xl lg:text-2xl text-balance max-w-[700px] text-black dark:text-white"
      >
        <span> Estudiante ingeniria en Informatica.</span><span
          class="text-yellow-200/90"
        >
          Tecnico en Informatica, AlumniONE
        </span>.
        <span class="text-green-200/90">
          De Ciudad de Mexico, Mexico</span
        >.<span class="opacity-75"> Especializado en soluciones unicas</span>
      </h2>
      <nav class="flex gap-x-4 mt-8 flex-wrap">
        <SocialPill
          href="https://www.linkedin.com/in/ulises-antonio-ruiz-silva/"
        >
          <LinkedIn class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/Supertepo">
          <GitHubIcon class="size-4 md:size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="mailto:ruizsulisesa@gmail.com">
          <MailIcon class="size-4 md:size-6" />
          ruizsulisesa@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>
    <SectionContainer id="experiencia">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <Briefcase class="size-7" />
        Experiencia
      </h2>
      <Experiencia />
    </SectionContainer>
    <SectionContainer id="proyectos">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Proyectos />
    </SectionContainer>
  </main>
</Layout>

