---
import Badge from "../components/Badge.astro";
import Layout from "../layouts/Layout.astro";
import LinkedIn from "../components/icons/LinkedIn.astro";
import SocialPill from "../components/SocialPill.astro";
import GitHubicon from "../components/icons/GitHub.astro";
---

<Layout title="Porfolio">
  <main>
    <section class="w-full lg:w-[740px] mx-auto py-44">
      <img
        class="rounded-full size-12 mb-4"
        src="https://avatars.githubusercontent.com/u/106052507?s=96&v=4"
        alt="Supertepo foto"
      />
      <h1
        class="text-gray-900 dark:text-white text-3xl md:text-4xl
		lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hey, soy Ulises <a
          href="https://www.linkedin.com/in/ulises-antonio-ruiz-silva/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
          ><Badge>Disponible para trabajar</Badge></a
        >
      </h1>
      <h2
        class="text-xl lg:text-2xl text-balance max-w-[700px] text-black dark:text-white"
      >
        <span> Sin experiencia profecional.</span><span
          class="text-yellow-200/90"
        >
          Desarrollador Web</span
        >.
        <span class="text-green-200/90">
          De Ciudad de Mexico, Mexico</span
        >.<span class="opacity-75"> Especializado en soluciones unicas</span>
      </h2>
      <nav class="flex gap-x-2">
        <SocialPill
          href="https://www.linkedin.com/in/ulises-antonio-ruiz-silva/"
        >
          <LinkedIn class="size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill
          href="https://github.com/Supertepo"
        >
          <GitHubicon class="size-6" />
          GitHub
        </SocialPill>
      </nav>
    </section>
  </main>
</Layout>

